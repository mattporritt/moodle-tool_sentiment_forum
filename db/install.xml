<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/log/store/standard/db" VERSION="20140415" COMMENT="XMLDB file for Moodle admin/tool/log/store/standard"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="sentiment_forum" COMMENT="Forum Table">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="forumid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" UNIQUE="true" COMMENT="primary id for core forum table"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" DEFAULT="1" COMMENT="is sentiment enabled for this forum"/>
        <FIELD NAME="sentiment" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false"  DECIMALS="6" COMMENT="the forum sentiment"/>
        <FIELD NAME="sadness" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="joy" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="fear" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="disgust" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="anger" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="forumid" UNIQUE="true" FIELDS="forumid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="sentiment_forum_posts" COMMENT="Forum Posts Table">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="forumid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" UNIQUE="false" COMMENT="primary id for core forum table"/>
        <FIELD NAME="postid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" UNIQUE="false" COMMENT="primary id for core posts table"/>
        <FIELD NAME="sentiment" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false"  DECIMALS="6" COMMENT="the post sentiment"/>
        <FIELD NAME="sadness" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="joy" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="fear" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="disgust" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="anger" TYPE="number" LENGTH="7" NOTNULL="false" SEQUENCE="false" DECIMALS="6"/>
        <FIELD NAME="timeposted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="posts" UNIQUE="true" FIELDS="forumid, postid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>